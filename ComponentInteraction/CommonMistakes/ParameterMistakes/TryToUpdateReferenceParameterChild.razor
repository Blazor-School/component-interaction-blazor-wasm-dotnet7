@using ComponentInteraction.Models

<div>
    <h3>Child Component</h3>
    <div>Received input parameter:"@ExampleInstance.Data"</div>
    <button @onclick="Correct">Correct</button>
    <button @onclick="Mistake">Mistake</button>
</div>

@code {
    [Parameter]
    public ExampleClass ExampleInstance { get; set; } = new();

    public void Correct()
    {
        ExampleInstance.Data = "Value changed";
    }

    public void Mistake()
    {
        ExampleInstance = new()
        {
            Data = "Reference changed"
        };
    }
}
